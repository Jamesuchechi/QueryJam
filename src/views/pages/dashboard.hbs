<section class="max-w-7xl mx-auto px-6 pt-8 pb-14 space-y-10">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        <div class="space-y-2">
            <p class="text-sm text-primary-200 font-semibold">Welcome back, {{user.name}}</p>
            <h1 class="text-3xl sm:text-4xl font-semibold">Your collaborative data HQ</h1>
            <p class="text-gray-300 max-w-2xl">Ship insights with the polish of Coinbase and the trust of PayPal. Manage sessions, datasets, and AI-assisted queries from one clean surface.</p>
        </div>
        <div class="flex gap-3">
            <a href="/sessions/create" class="px-5 py-3 rounded-xl bg-gradient-to-r from-primary-500 to-accent-500 shadow-card font-semibold hover:shadow-card-hover transition transform hover:-translate-y-0.5">New session</a>
            <a href="/sessions" class="px-5 py-3 rounded-xl border border-white/20 text-white font-semibold hover:border-primary-400 transition">View sessions</a>
        </div>
    </div>

    <div class="grid md:grid-cols-4 gap-4">
        <div class="glass-dark rounded-2xl border border-white/10 p-4 shadow-card space-y-2">
            <p class="text-sm text-gray-400">Active sessions</p>
            <p class="text-3xl font-semibold">{{stats.activeSessions}}</p>
            <p class="text-xs text-emerald-300">Live collaborators welcome</p>
        </div>
        <div class="glass-dark rounded-2xl border border-white/10 p-4 shadow-card space-y-2">
            <p class="text-sm text-gray-400">Total queries</p>
            <p class="text-3xl font-semibold">{{stats.totalQueries}}</p>
            <p class="text-xs text-primary-200">Tracked with latency</p>
        </div>
        <div class="glass-dark rounded-2xl border border-white/10 p-4 shadow-card space-y-2">
            <p class="text-sm text-gray-400">Datasets</p>
            <p class="text-3xl font-semibold">{{stats.totalDatasets}}</p>
            <p class="text-xs text-gray-300">Mongo + CSV friendly</p>
        </div>
        <div class="glass-dark rounded-2xl border border-white/10 p-4 shadow-card space-y-2">
            <p class="text-sm text-gray-400">AI suggestions</p>
            <p class="text-3xl font-semibold">{{stats.aiSuggestions}}</p>
            <p class="text-xs text-gray-300">Keep iterating faster</p>
        </div>
    </div>

    <div class="grid lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 space-y-4">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-xl font-semibold">Your sessions</h2>
                    <p class="text-sm text-gray-400">Recent rooms you own or collaborate in.</p>
                </div>
                <a href="/sessions/create" class="text-primary-200 text-sm hover:text-primary-100">Create session</a>
            </div>
            <div class="grid md:grid-cols-2 gap-4">
                {{#if sessions.length}}
                {{#each sessions}}
                <a href="/sessions/{{this._id}}"
                    class="glass-dark rounded-2xl border border-white/10 p-5 shadow-card hover:shadow-card-hover transition transform hover:-translate-y-0.5 block">
                    <div class="flex items-start justify-between">
                        <div>
                            <p class="text-sm text-gray-400">{{formatDate this.createdAt}}</p>
                            <h3 class="text-lg font-semibold">{{this.name}}</h3>
                        </div>
                        <span class="px-3 py-1 rounded-full text-xs border border-white/10 text-gray-200">{{#if this.isPublic}}Public{{else}}Private{{/if}}</span>
                    </div>
                    <p class="text-sm text-gray-300 mt-2">{{truncate this.description 120}}</p>
                    <div class="flex items-center justify-between mt-4 text-xs text-gray-400">
                        <span class="flex items-center space-x-2"><i data-lucide="users" class="w-4 h-4"></i><span>{{this.members.length}} collaborators</span></span>
                        <span class="flex items-center space-x-2"><i data-lucide="clock" class="w-4 h-4"></i><span>{{timeAgo this.createdAt}}</span></span>
                    </div>
                </a>
                {{/each}}
                {{else}}
                <div class="md:col-span-2 glass-dark rounded-2xl border border-white/10 p-6 text-gray-300">
                    No sessions yet. Create your first room to start jamming.
                </div>
                {{/if}}
            </div>
        </div>

        <div class="space-y-4">
            <div class="glass-dark rounded-2xl border border-white/10 p-5 shadow-card space-y-3">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold">Recent activity</h2>
                    <span class="text-xs text-gray-400">Live</span>
                </div>
                <div class="space-y-3">
                    {{#if recentActivity.length}}
                    {{#each recentActivity}}
                    <div class="flex items-center space-x-3 p-3 rounded-xl bg-white/5 border border-white/5">
                        <div class="w-10 h-10 rounded-xl bg-primary-500/20 flex items-center justify-center text-primary-200">
                            <i data-lucide="{{this.icon}}" class="w-4 h-4"></i>
                        </div>
                        <div>
                            <p class="text-sm text-white">{{this.description}}</p>
                            <p class="text-xs text-gray-400">{{timeAgo this.timestamp}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <p class="text-sm text-gray-400">No activity yet. Execute your first query to see updates.</p>
                    {{/if}}
                </div>
            </div>
            <div class="glass-dark rounded-2xl border border-white/10 p-5 shadow-card space-y-3">
                <h2 class="text-lg font-semibold">Recent sessions</h2>
                <div class="space-y-3">
                    {{#if recentSessions.length}}
                    {{#each recentSessions}}
                    <a href="/sessions/{{this._id}}" class="block p-3 rounded-xl bg-white/5 border border-white/5 hover:border-primary-300/50 transition">
                        <div class="flex items-center justify-between">
                            <p class="text-white font-semibold">{{this.name}}</p>
                            <span class="text-xs text-gray-400">{{timeAgo this.createdAt}}</span>
                        </div>
                        <p class="text-sm text-gray-300">{{truncate this.description 80}}</p>
                    </a>
                    {{/each}}
                    {{else}}
                    <p class="text-sm text-gray-400">We will list your latest sessions here.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>
