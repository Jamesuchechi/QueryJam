<section class="max-w-6xl mx-auto px-6 pt-10 pb-14 space-y-8">
    <div class="flex items-center justify-between">
        <div>
            <p class="text-sm text-primary-200 font-semibold">Workspace</p>
            <h1 class="text-3xl font-semibold">Settings & profile</h1>
            <p class="text-gray-300">Tune your identity, notifications, and security in a glassy, modern panel.</p>
        </div>
        <a href="/dashboard" class="px-4 py-2 rounded-xl border border-white/20 text-white hover:border-primary-400 transition">Back</a>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
        <div class="glass-dark rounded-3xl border border-white/10 shadow-card p-6 space-y-4">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold">Profile</h2>
                <i data-lucide="user" class="w-5 h-5 text-primary-200"></i>
            </div>
            <form class="space-y-4">
                <div class="space-y-2">
                    <label class="text-sm text-gray-300">Name</label>
                    <input type="text" value="{{user.name}}" class="w-full px-4 py-3 rounded-xl bg-dark-800 border border-white/10 focus:border-primary-400 focus:ring-2 focus:ring-primary-500/40 outline-none text-white">
                </div>
                <div class="space-y-2">
                    <label class="text-sm text-gray-300">Email</label>
                    <input type="email" value="{{user.email}}" disabled class="w-full px-4 py-3 rounded-xl bg-dark-800 border border-white/10 text-gray-400">
                </div>
                <button type="button" class="px-4 py-3 rounded-xl bg-gradient-to-r from-primary-500 to-accent-500 shadow-card font-semibold hover:shadow-card-hover transition">Save profile</button>
            </form>
        </div>

        <div class="glass-dark rounded-3xl border border-white/10 shadow-card p-6 space-y-4">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold">Notifications</h2>
                <i data-lucide="bell" class="w-5 h-5 text-primary-200"></i>
            </div>
            <div class="space-y-3 text-sm text-gray-300">
                <label class="flex items-center justify-between p-3 rounded-xl bg-white/5 border border-white/10">
                    <span>Session updates</span>
                    <input type="checkbox" checked class="rounded bg-dark-800 border-white/20">
                </label>
                <label class="flex items-center justify-between p-3 rounded-xl bg-white/5 border border-white/10">
                    <span>AI suggestions</span>
                    <input type="checkbox" class="rounded bg-dark-800 border-white/20">
                </label>
                <label class="flex items-center justify-between p-3 rounded-xl bg-white/5 border border-white/10">
                    <span>Security alerts</span>
                    <input type="checkbox" checked class="rounded bg-dark-800 border-white/20">
                </label>
            </div>
        </div>

        <div class="glass-dark rounded-3xl border border-white/10 shadow-card p-6 space-y-4 md:col-span-2">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-lg font-semibold">Security</h2>
                    <p class="text-sm text-gray-400">Fintech-grade best practices.</p>
                </div>
                <i data-lucide="shield" class="w-5 h-5 text-primary-200"></i>
            </div>
            <div class="grid md:grid-cols-3 gap-4">
                <div class="p-4 rounded-xl bg-white/5 border border-white/10">
                    <p class="text-sm text-gray-400">Password</p>
                    <p class="text-white font-semibold">Updated recently</p>
                </div>
                <div class="p-4 rounded-xl bg-white/5 border border-white/10">
                    <p class="text-sm text-gray-400">2FA</p>
                    <p class="text-white font-semibold">Enabled</p>
                </div>
                <div class="p-4 rounded-xl bg-white/5 border border-white/10">
                    <p class="text-sm text-gray-400">Sessions</p>
                    <p class="text-white font-semibold">3 active devices</p>
                </div>
            </div>
            <div class="flex flex-wrap gap-3 mt-4">
                <button class="px-4 py-3 rounded-xl border border-white/20 text-white hover:border-primary-400 transition">Manage devices</button>
                <button class="px-4 py-3 rounded-xl bg-red-500/20 text-red-200 border border-red-500/40 hover:bg-red-500/30 transition">Sign out everywhere</button>
            </div>
        </div>
    </div>
</section>
